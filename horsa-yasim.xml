<!--
************************************************************************
YASim aerodynamic model for a Junkers Ju-88-a4, modded by Lester Boffo
 Modded from Detlef's JU88

************************************************************************
-->

<!-- Weight -->
<airplane mass="6901">


<!-- Approach configuration -->
<approach speed="39" aoa="4" glide-angle="5.1">
  <control-setting axis="/controls/flight/flaps" value="0.75"/>
  <control-setting axis="/controls/gear/gear-down" value="1"/>
</approach>

<!-- Cruise configuration -->
<cruise speed="100" alt="5000" glide-angle="3.1">
  <control-setting axis="/controls/flight/flaps" value="0.0"/>
  <control-setting axis="/controls/gear/gear-down" value="0"/>
</cruise>

<!-- pilot's eyepoint -->
<cockpit x="-4.495" y="0" z="0.689"/>

<!-- fuselage -->

 <fuselage ax="8.54" ay="0.0" az="-0.53" bx="6.53" by="0.0" bz="-0.26" width="1.725" taper="0.45" midpoint="1.0"/>
<fuselage ax="6.53" ay="0.0" az="-0.26" bx="-4.06" by="0.0" bz="-0.26" width="1.825" taper="1.0" midpoint="0.5" cy="1.28" cz="1.24"/>
<fuselage ax="-4.06" ay="0.0" az="0.16" bx="-10.643" by="0.0" bz="0.813" width="1.725" taper="0.15" midpoint="0.0" cy="1.028" cz="1.024"/> 

<!-- <fuselage ax="8.54" ay="0.0" az="-0.53" bx="-10.643" by="0.0" bz="0.413" width="1.725" taper="0.35" midpoint="0.21" cy="1.028" cz="1.024"/> -->


<!--inner wing-->

<mstab x="0.225" y="0.75" z="0.22"
                length="2.76" 
                chord="4.669"
                taper="1"
                incidence="1.5"
                twist="0"
                sweep="0" 
                dihedral="0"
                camber="0.063">
  <stall aoa="17.5" width="7" peak="3.5"/>
  <flap0 start="0.0" end="1.0" lift="1.34" drag="1.68"/>
  <control-input axis="/controls/flight/flaps" control="FLAP0"/>
  <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
  <control-speed control="FLAP0" transition-time="5"/>
</mstab>

<!--outer wing-->
<wing x="0.22" y="3.55" z="0.22"
                length="9.916" 
                chord="4.669"
                taper="0.47"
                incidence="0.35"
                twist="-0.9"
                sweep="0.3" 
                dihedral="0"
                camber="0.042">
  <stall aoa="17" width="5" peak="2.5"/>
  <flap0 start="0.0" end="0.43" lift="1.32" drag="1.64"/>
  <flap1 start="0.43" end="1.0" lift="1.6" drag="1.2"/>
  <control-input axis="/controls/flight/flaps" control="FLAP0"/>
  <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
  <control-speed control="FLAP0" transition-time="5"/>
  <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
  <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>
</wing>

<hstab x="-10.15" y="0.34" z="0.78" 
              length="5.109"
              chord="2.189"
              taper="1.0"
              dihedral="0"
              sweep="0"
              camber="0.03"
              incidence="-1.5">
  <stall aoa="19" width="7" peak="3.5"/>
  <flap0 start="0.0" end="1.0" lift="1.9" drag="1.4"/>
  <control-input axis="/controls/flight/elevator" control="FLAP0"/>
  <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
  <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
</hstab>

<vstab x="-10.1935" y="0" z="0.524" 
                         length="2.187"
                         chord="3.75"
                         taper="0.62"
                         sweep="10">
  <stall aoa="22" width="8" peak="3.5"/>
  <flap0 start="0" end="1.2" lift="1.37" drag="1.22"/>
  <control-input axis="/controls/flight/rudder" square="true" control="FLAP0" invert="true"/>
  <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
  <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"
    min="1" max="-1"/>
</vstab>


<!-- nose gear -->
	<gear x="6.523" y="0.0" z="-2.834" compression="0.2" spring="0.8" damp="1.3" dfric="0.6" sfric ="0.1"
	  castering="0" retract-time = "0" > 
      <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
      <control-input axis="/controls/gear/nosewheel-lock" 
				src0="0" src1="1" dst0="1" dst1="1" control="CASTERING"/>
      <control-speed control="EXTEND" transition-time="4"/>
      <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
    </gear>

 <!-- left main -->
<gear x="-0.176" y="2.665" z="-2.822" compression="0.2" spring="0.8" damp="1.0" dfric="0.6" sfric ="0.10">
  <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
  <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
  <control-speed control="EXTEND" transition-time="6"/>
  <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
</gear>

 <!-- right main -->
<gear x="-0.176" y="-2.665" z="-2.822" compression="0.2" spring="0.8" damp="1.0" dfric="0.6" sfric ="0.10">
  <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
  <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
  <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
  <control-speed control="EXTEND" transition-time="7"/>
  <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
</gear>

  <!-- external loads -->
  <weight x="6.303" y="0.0" z="0.104"  mass-prop="sim/weight[1]/weight-lb"/>
  <weight x="-0.5" y="0.0" z=" -0.104"  mass-prop="sim/weight[2]/weight-lb"/>
 
<ballast x="7.5" y="0" z="-0.7" mass="1000"/>

<!-- hitch -->

<hitch name="winch" x="2.873" y="0" z="-0.211">
	<tow length="3100" weight-per-meter="0.04" elastic-constant="22000"  break-force="32000"/>
	<!-- 4.5mm steel wire-->
	<winch max-tow-length="4000" min-tow-length="300" initial-tow-length="3100" max-winch-speed="120" power="2250" max-force="39000" />
	<control-input axis="/controls/winch/place" control="PLACEWINCH"/>
</hitch>

<hitch name="aerotow" x="6.3" y="0" z="-0.031" force-is-calculated-by-other="0">
	<tow length="600" weight-per-meter="0.040" elastic-constant="22000" break-force="32000" mp-auto-connect-period="0.0"/>
	<winch max-tow-length="1000" min-tow-length="60" initial-tow-length="60"/>
	<control-input axis="/controls/aerotow/find-aircraft" control="FINDAITOW"/>

</hitch>

</airplane>
